---
- name: Build & Deploy Docker Container
  hosts: localhost
  become: true
  tasks:
    - name: Pull Docker Image
      docker_image:
        name: "{{ DOCKER_IMAGE }}"
        source: pull
        path: /

    - name: Run Docker Container
      docker_container:
        name: my_container
        image: "{{ DOCKER_IMAGE }}"
        state: started
        ports:
          - "8079:8080"
      register: result

    - debug:
        var: result

